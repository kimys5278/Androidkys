<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_weight="1">

    <TableRow>

        <EditText
            android:id="@+id/ed1"
            android:hint="숫자1"
            android:layout_span="5"/>
    </TableRow>
    <TableRow>
        <EditText
            android:id="@+id/ed2"
            android:hint="숫자2"
            android:layout_span="5"/>
    </TableRow>
    <TableRow>
        <Button
            android:layout_weight="1"
            android:id="@+id/btn0"
            android:text="0"
            />
        <Button
            android:layout_weight="1"
            android:id="@+id/btn1"
            android:text="1"
            />
        <Button
            android:layout_weight="1"
            android:id="@+id/btn2"
            android:text="2"
            />
        <Button
            android:layout_weight="1"
            android:id="@+id/btn3"
            android:text="3"
            />
        <Button
            android:layout_weight="1"
            android:id="@+id/btn4"
            android:text="5"
            />
    </TableRow>

    <TableRow>
        <Button
            android:layout_weight="1"
            android:id="@+id/btn5"
            android:text="5"
            />
        <Button
            android:layout_weight="1"
            android:id="@+id/btn6"
            android:text="6"
            />
        <Button
            android:layout_weight="1"
            android:id="@+id/btn7"
            android:text="7"
            />
        <Button
            android:layout_weight="1"
            android:id="@+id/btn8"
            android:text="8"
            />
        <Button
            android:layout_weight="1"
            android:id="@+id/btn9"
            android:text="9"
            />
    </TableRow>

    <TableRow>
        <Button
            android:layout_weight="1"
            android:id="@+id/add"
            android:text="더하기"
            android:layout_span="5"
            />
    </TableRow>

    <TableRow>
        <Button
            android:layout_weight="1"
            android:id="@+id/sub"
            android:text="빼기"
            android:layout_span="5"
            />
    </TableRow>

    <TableRow>
        <Button
            android:layout_weight="1"
            android:id="@+id/mul"
            android:text="곱하기"
            android:layout_span="5"
            />
    </TableRow>

    <TableRow>
        <Button
            android:layout_weight="1"
            android:id="@+id/div"
            android:text="나누기"
            android:layout_span="5"
            />
    </TableRow>

    <TableRow>
        <Button
            android:layout_weight="1"
            android:id="@+id/nam"
            android:text="나머지"
            android:layout_span="5"
            />
    </TableRow>
    <TableRow>
        <TextView
            android:layout_weight="1"
            android:text="계산결과:"
            android:id="@+id/text"
            android:textColor="#FD1111"
            android:textSize="20dp"
            />

    </TableRow>



</TableLayout>